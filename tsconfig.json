{
  "compilerOptions": {
    "outDir": "./build/",
    "baseUrl": "./src",
    "typeRoots": ["./node_modules/@types"],
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2015",
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "lib": ["esnext"]
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules/**/*"]
}
